<Window x:Class="BooksAPIClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksAPIClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label>Titel</Label>
            <TextBox Name="tb1" Grid.Column="1" Text="Softwaretests"/>
            <Button Click="GoSuche" Grid.Column="2" Padding="24,4">Suche</Button>
            <Button Click="CalcPageSum" Grid.Column="3" Padding="24,4">Calc Page Sum</Button>
        </Grid>
        <DataGrid Name="myGrid" />
    </DockPanel>
</Window>
